{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "001-create-users-tables",
        "author": "tushar",
        "changes": [
          {
            "sql": {
              "sql": "CREATE EXTENSION IF NOT EXISTS \"uuid-ossp\";",
              "dbms": "postgresql"
            }
          },
          {
            "createTable": {
              "tableName": "users",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "UUID",
                    "constraints": { "primaryKey": true, "nullable": false },
                    "defaultValueComputed": "uuid_generate_v4()"
                  }
                },
                { "column": { "name": "email", "type": "VARCHAR(512)", "constraints": { "nullable": false, "unique": true } } },
                { "column": { "name": "display_name", "type": "VARCHAR(255)" } },
                { "column": { "name": "password_hash", "type": "VARCHAR(1024)" } },
                { "column": { "name": "roles", "type": "VARCHAR(255)", "defaultValue": "USER" } },
                { "column": { "name": "created_at", "type": "TIMESTAMP WITH TIME ZONE", "defaultValueComputed": "now()" } },
                { "column": { "name": "updated_at", "type": "TIMESTAMP WITH TIME ZONE", "defaultValueComputed": "now()" } },
                { "column": { "name": "enabled", "type": "BOOLEAN", "defaultValueBoolean": true } }
              ]
            }
          },
          {
            "createTable": {
              "tableName": "user_mailboxes",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "UUID",
                    "constraints": { "primaryKey": true, "nullable": false },
                    "defaultValueComputed": "uuid_generate_v4()"
                  }
                },
                { "column": { "name": "user_id", "type": "UUID", "constraints": { "nullable": false } } },
                { "column": { "name": "email_address", "type": "VARCHAR(512)", "constraints": { "nullable": false } } },
                { "column": { "name": "provider", "type": "VARCHAR(50)", "constraints": { "nullable": false } } },
                { "column": { "name": "provider_user_id", "type": "VARCHAR(512)" } },
                { "column": { "name": "oauth_access_token", "type": "TEXT" } },
                { "column": { "name": "oauth_refresh_token", "type": "TEXT" } },
                { "column": { "name": "oauth_scope", "type": "TEXT" } },
                { "column": { "name": "token_expiry", "type": "TIMESTAMP WITH TIME ZONE" } },
                { "column": { "name": "is_primary", "type": "BOOLEAN", "defaultValueBoolean": false } },
                { "column": { "name": "connected_at", "type": "TIMESTAMP WITH TIME ZONE", "defaultValueComputed": "now()" } },
                { "column": { "name": "status", "type": "VARCHAR(50)", "defaultValue": "CONNECTED" } }
              ]
            }
          },
          {
            "addForeignKeyConstraint": {
              "baseTableName": "user_mailboxes",
              "baseColumnNames": "user_id",
              "referencedTableName": "users",
              "referencedColumnNames": "id",
              "constraintName": "fk_user_mailboxes_user",
              "onDelete": "CASCADE"
            }
          },
          {
            "createIndex": {
              "indexName": "idx_user_mailboxes_user",
              "tableName": "user_mailboxes",
              "columns": [{ "column": { "name": "user_id" } }]
            }
          },
          {
            "createIndex": {
              "indexName": "uq_user_primary_mailbox",
              "tableName": "user_mailboxes",
              "unique": true,
              "columns": [
                { "column": { "name": "user_id" } },
                { "column": { "name": "email_address" } }
              ]
            }
          },
          {
            "createTable": {
              "tableName": "user_sessions",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "UUID",
                    "constraints": { "primaryKey": true, "nullable": false },
                    "defaultValueComputed": "uuid_generate_v4()"
                  }
                },
                { "column": { "name": "user_id", "type": "UUID", "constraints": { "nullable": false } } },
                { "column": { "name": "refresh_token_hash", "type": "VARCHAR(1024)" } },
                { "column": { "name": "ip_address", "type": "VARCHAR(128)" } },
                { "column": { "name": "user_agent", "type": "TEXT" } },
                { "column": { "name": "created_at", "type": "TIMESTAMP WITH TIME ZONE", "defaultValueComputed": "now()" } },
                { "column": { "name": "expires_at", "type": "TIMESTAMP WITH TIME ZONE" } }
              ]
            }
          },
          {
            "addForeignKeyConstraint": {
              "baseTableName": "user_sessions",
              "baseColumnNames": "user_id",
              "referencedTableName": "users",
              "referencedColumnNames": "id",
              "constraintName": "fk_user_sessions_user",
              "onDelete": "CASCADE"
            }
          }
        ]
      }
    }
  ]
}
